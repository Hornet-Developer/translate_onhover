{
  "name": "TransOver",
  "version": "0.27",
  "icons": { "48": "to_icon.png", "128": "to_icon.png" },
  "description": "Hover, click or select to translate",
  "background_page": "background.html",
  "options_page": "options.html",
  "homepage_url": "https://github.com/artemave/translate_onhover",
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": [
      "lib/jquery.min.js",
      "lib/xregexp-min.js",
      "lib/xregexp-unicode-base.js",
      "lib/xregexp-unicode-categories.js",
      "lib/underscore.js",
      "lib/tooltip.js",
      "contentscript.js"
    ],
    "css": ["styles.css"],
    "all_frames": true
  }],
  "permissions": [ "http://www.google.com/translate_a/t", "tabs" ]
}
